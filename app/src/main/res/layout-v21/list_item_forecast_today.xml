<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:minHeight="?android:attr/listPreferredItemHeight"
    android:orientation="horizontal"
    android:background="@color/colorPrimary"
    android:baselineAligned="false">



        <LinearLayout
            android:layout_width="0dp"
            android:layout_margin="10dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"

            android:orientation="vertical"
            android:layout_weight="1">

            <TextView
                android:id="@+id/list_item_date_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/_20_de_outubro"
                android:textColor="@android:color/white"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/list_item_high_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/simulacao_minima" android:textColor="@android:color/white"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/list_item_low_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/simulacao_maxima" android:textColor="@android:color/white"
                android:textAlignment="center" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:orientation="vertical"
            tools:ignore="UseCompoundDrawables"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/list_item_icon"
                android:layout_width="119dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:contentDescription="@string/texto_condicao_tempo"
                app:srcCompat="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/list_item_forecast_textview"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:text="@string/clear" android:textColor="@android:color/white"
                android:elevation="1dp"
                android:gravity="center_vertical"
                android:textAlignment="center"
                android:layout_gravity="center_vertical|center_horizontal|center" />

        </LinearLayout>


</LinearLayout>