<!-- Master layout. -->
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimary" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_below="@+id/toolbar">

            <!--<include-->
                <!--layout="@layout/detail_today_grid"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content" />-->

            <!-- Main content: high, low, art, weather state -->

            <!--<include-->
                <!--layout="@layout/detail_aditional_pane"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="match_parent"/>-->

            <android.support.v7.widget.GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@android:color/white"
                app:columnCount="2"
                android:layout_weight="2">

                <TextView
                    android:id="@+id/detail_day_textview"
                    android:layout_marginBottom="@dimen/abc_list_item_padding_horizontal_material"
                    android:layout_marginTop="@dimen/abc_list_item_padding_horizontal_material"
                    android:fontFamily="sans-serif"
                    android:gravity="center_horizontal"
                    android:textAppearance="@style/TextAppearance.AppCompat.Title"
                    app:layout_columnSpan="2"
                    app:layout_columnWeight="1"
                    app:layout_gravity="fill_horizontal"
                    tools:text="Today, April 03"
                    tools:targetApi="jelly_bean"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:id="@+id/detail_icon"
                    android:layout_width="wrap_content"
                    android:adjustViewBounds="true"
                    app:layout_columnWeight="1"
                    app:layout_gravity="fill_horizontal"
                    tools:src="@drawable/art_clouds"
                    tools:ignore="ContentDescription"
                    android:maxWidth="100dp"
                    android:minHeight="179dp"
                    android:layout_height="121dp" />

                <TextView
                    android:id="@+id/detail_high_textview"
                    android:layout_width="wrap_content"
                    android:fontFamily="sans-serif-light"
                    android:gravity="center_horizontal"
                    android:textSize="72sp"
                    app:layout_columnWeight="1"
                    app:layout_gravity="fill_horizontal"
                    tools:text="19"
                    tools:targetApi="jelly_bean"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/detail_forecast_textview"
                    android:layout_width="wrap_content"
                    android:fontFamily="sans-serif"
                    android:gravity="center_horizontal"
                    android:textAppearance="@style/TextAppearance.AppCompat.Title"
                    app:layout_columnWeight="1"
                    tools:text="@string/clear"
                    tools:targetApi="jelly_bean"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/detail_low_textview"
                    android:layout_width="wrap_content"
                    android:layout_marginBottom="@dimen/abc_list_item_padding_horizontal_material"
                    android:fontFamily="sans-serif-light"
                    android:gravity="center_horizontal"
                    android:textSize="36sp"
                    app:layout_columnWeight="1"
                    tools:text="10"
                    tools:targetApi="jelly_bean"
                    tools:ignore="PrivateResource"
                    android:layout_height="wrap_content" />

            </android.support.v7.widget.GridLayout>

            <GridLayout
                android:id="@+id/detail_additional_pane"
                android:layout_width="wrap_content"
                android:background="@color/grey"
                android:columnCount="2"
                android:paddingBottom="@dimen/abc_list_item_padding_horizontal_material"
                android:paddingEnd="@dimen/forecast_detail_horizontal_padding"
                android:paddingLeft="@dimen/forecast_detail_horizontal_padding"
                android:paddingRight="@dimen/forecast_detail_horizontal_padding"
                android:paddingStart="@dimen/forecast_detail_horizontal_padding"
                android:paddingTop="@dimen/abc_list_item_padding_horizontal_material"
                android:layout_height="match_parent"
                android:clipToPadding="false"
                android:layout_alignParentLeft="false"
                android:layout_alignParentRight="false"
                app:layout_anchorGravity="right"
                app:layout_gravity="right">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill"
                    android:layout_rowWeight="1"
                    android:fontFamily="sans-serif"
                    android:gravity="center_vertical"
                    android:text="@string/simulacao_umidade"
                    android:textAppearance="@style/TextAppearance.AppCompat.Title"
                    tools:targetApi="lollipop" />

                <TextView
                    android:id="@+id/list_item_humidity"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill"
                    android:gravity="center_vertical"
                    android:text="@string/simulacao_minima"
                    android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                    android:textAlignment="center" />

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill"
                    android:layout_rowWeight="1"
                    android:fontFamily="sans-serif"
                    android:gravity="center_vertical"
                    android:text="@string/simulacao_vento"
                    android:textAppearance="@style/TextAppearance.AppCompat.Title"
                    tools:targetApi="lollipop" />

                <TextView
                    android:id="@+id/list_item_wind"
                    android:layout_gravity="fill"
                    android:gravity="center_vertical"
                    android:text="@string/simulacao_minima"
                    android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                    android:textAlignment="center" />

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill"
                    android:layout_rowWeight="1"
                    android:fontFamily="sans-serif"
                    android:gravity="center_vertical"
                    android:text="@string/simulacao_pressao"
                    android:textAppearance="@style/TextAppearance.AppCompat.Title"
                    tools:targetApi="lollipop"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/list_item_pressure"
                    android:layout_gravity="fill"
                    android:gravity="center_vertical"
                    android:text="@string/simulacao_minima"
                    android:textAppearance="@style/TextAppearance.AppCompat.Headline" />



            </GridLayout>



    </LinearLayout>

   </RelativeLayout>
